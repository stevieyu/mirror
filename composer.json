{
    "name": "stevie/mirror",
    "authors": [],
    "require": {
        "php": "^7.2 || ^8",
        "guzzlehttp/guzzle": "^7",
        "kevinrob/guzzle-cache-middleware": "^5",
        "league/flysystem": "^2",
        "rakibtg/sleekdb": "^2",
        "chrisyue/php-m3u8": "^4.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5|^6|^7"
    },
    "scripts":{
        "dev": "php -S 0.0.0.0:8088 index.php",
        "install-box": "composer global require humbug/box",
        "box": [
            "composer install --no-dev",
            "composer dump-autoload --classmap-authoritative --no-dev --ansi",
            "box compile",
            "composer install"
        ]
    },
    "autoload": {
        "psr-4": {
            "Stevie\\Mirror\\": "src/"
        }
    }
}
